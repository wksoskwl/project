#include<SoftwareSerial.h>
SoftwareSerial BT(2,3);

int R = 13;
int G = 12;
int B = 11;

void RGB(int r,int g,int b)
{
  analogWrite(R,r);
  analogWrite(G,g);
  analogWrite(B,b);
}

void rainbow()
{
  RGB(255,0,0);
  delay(100);
  RGB(255,255,0);
  delay(100);
  RGB(0,255,0);
  delay(100);
  RGB(0,0,255);
  delay(100);
  RGB(150,0,255);
  delay(100);
  RGB(255,255,255);
  delay(100);
}

void setup() {
  BT.begin(9600);
  pinMode(R,OUTPUT);
  pinMode(G,OUTPUT);
  pinMode(B,OUTPUT);
}

void loop() {
  if(BT.available())
  {
    char bt = BT.read();
    if(bt == 'A')
    {
      RGB(255,0,0);
    }
    if(bt == 'B')
    {
      RGB(255,255,0);
    }
    if(bt == 'C')
    {
      RGB(0,255,0);
    }
    if(bt == 'D')
    {
      RGB(0,0,255);
    }
    if(bt == 'E')
    {
      RGB(150,50,255);
    }
    if(bt == 'F')
    {
      RGB(255,255,255);
    }
    if(bt == 'G')
    {
      while(!BT.available())
      rainbow();
    }
  }
}
